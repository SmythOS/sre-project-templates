{
  "name": "sre-crypto-assistant-demo",
  "version": "1.0.0",
  "description": "Sample Electron app",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "watch": "rollup -c -w",
    "build": "rollup -c",
    "build:exe:win": "npm run build && electron-builder --win",
    "build:exe:mac": "npm run build && electron-builder --mac",
    "build:exe:linux": "npm run build && electron-builder --linux",
    "dist": "npm run build && electron-builder --publish=never",
    "pack": "npm run build && electron-builder --dir",
    "clean": "rimraf dist build"
  },
  "keywords": [
    "smythos",
    "electron",
    "api",
    "desktop",
    "app"
  ],
  "author": "Alaa-eddine KADDOURI",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@smythos/sdk": "^1.3.0",
    "@types/node": "^22.10.2",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "rimraf": "^6.0.1",
    "rollup": "^4.30.1",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2"
  },
  "build": {
    "appId": "com.smythos.sre-crypto-assistant-demo",
    "productName": "sre-crypto-assistant-demo",
    "electronVersion": "38.3.0",
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "index.html"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "pkce-challenge": "^5.0.0"
  }
}
